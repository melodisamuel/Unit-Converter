<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Length Converter</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Optional CSS -->
</head>
<body>
    <h1>Length Converter</h1>
    <form action="/length/convert" method="POST">
        <label for="value">Enter Value:</label>
        <input type="number" id="value" name="value" required>

        <label for="unitFrom">From:</label>
        <select id="unitFrom" name="unitFrom">
            <option value="meters">Meters</option>
            <option value="kilometers">Kilometers</option>
            <option value="centimeters">Centimeters</option>
            <option value="inches">Inches</option>
            <option value="feet">Feet</option>
        </select>

        <label for="unitTo">To:</label>
        <select id="unitTo" name="unitTo">
            <option value="meters">Meters</option>
            <option value="kilometers">Kilometers</option>
            <option value="centimeters">Centimeters</option>
            <option value="inches">Inches</option>
            <option value="feet">Feet</option>
        </select>

        <button type="submit">Convert</button>
    </form>

    <% if (convertedValue !== undefined) { %>
        <h2>Converted Value: <%= convertedValue %></h2>
    <% } %>
</body>
</html>
